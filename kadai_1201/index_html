        #box1{
            background-color: lightblue;
            border-style: solid;
            margin: 20px;
            padding: 20px;
            border-radius: 10px;
        }
        #box2{
            background-color: #fff2e6;
            border: 2px;
            padding: 20px;
            margin: 20px;
            border-style: solid;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
        }
        #box3{
            background-color: #f9e6ff;
            border-style: dashed;
            padding: 20px;
            margin: 20px;
            border-radius: 0px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        @media screen and (max-width: 979px) {
            h2 { font-size: 20px; }
            p { font-size: 16px; }
        }

        @media screen and (max-width: 768px) {
            h2 { font-size: 18px; }
            p { font-size: 14px; }
            #box1, #box2, #box3 {
                margin: 10px;
                padding: 10px;
            }
        }

        @media screen and (max-width: 480px) {
            h2 { font-size: 16px; }
            p { font-size: 12px; }
            #box1, #box2, #box3 {
                margin: 5px;
                padding: 5px;
            }
        }
    </style>
